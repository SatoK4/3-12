<%= form_with model: Book.new do |f| %>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <!--投稿されると作られるようにする-->
  </tbody>
</table>

<h2>New book</h2>

<div class="new_field">
  <p class="new_text">Title</p>
  <%= f.text_field :title %>
</div>
<div class="new_field">
  <p class="new_text">Body</p>
  <%= f.text_area :body %>
</div>

  <%= f.submit 'Create Book' %>
<% end %>
